<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/nom_surveillant_historique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Surveillant"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon"
            app:layout_constraintBottom_toTopOf="@+id/heure_historique"/>

        <TextView
            android:id="@+id/heure_historique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Heure"
            app:layout_constraintTop_toBottomOf="@id/nom_surveillant_historique"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon"/>

        <TextView
            android:id="@+id/retard_historique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Retard"
            app:layout_constraintTop_toBottomOf="@id/heure_historique"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon"/>

        <TextView
            android:id="@+id/salle_historique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Salle"
            app:layout_constraintTop_toBottomOf="@id/retard_historique"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_delete"
            android:contentDescription="Supprimer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>