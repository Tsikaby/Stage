<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/nom_surveillant_historique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nom du Surveillant: "
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon" />

        <TextView
            android:id="@+id/heure_historique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Heure: "
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/nom_surveillant_historique"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon" />

        <TextView
            android:id="@+id/retard_historique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Retard: "
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/heure_historique"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon" />

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@android:color/holo_red_dark"
            android:contentDescription="Supprimer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>