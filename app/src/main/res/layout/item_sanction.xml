<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/nom_surveillant_sanction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du Surveillant"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mois_sanction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mois"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/retards_sanction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nombre de retards: 0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/absences_sanction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nombre d'absences: 0"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>